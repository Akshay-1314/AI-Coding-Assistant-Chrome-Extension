{
  "manifest_version": 3,
  "name": "AZ_AI_CHAT_BOT",
  "version": "0.1",
  "author": "Akshay Kumar Malathkar",
  "description": "An AI_CHAT_BOT chrome extension that helps the user with problem queries on maang.in website",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/delete.png",
        "assets/play.png",
        "inject.js"
      ],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "AZ_AI_CHAT_BOT"
  }
}
